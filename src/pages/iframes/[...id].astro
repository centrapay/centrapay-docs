---
import { getCollection } from '../../utils/getCollection';
import { render } from 'astro:content';
import Prose from '../../components/Prose.astro';
import IframeLayout from '../../layouts/IframeLayout.astro';

export async function getStaticPaths() {
  const guides = await getCollection('guides');
  const merchantServices = await getCollection('merchantServices');
  // Filter pages that have iframe: true in their frontmatter
  const iframePages = [
    ...guides.filter(entry => entry.data.iframe === true),
    ...merchantServices.filter(entry => entry.data.iframe === true),
  ];
  return iframePages.map(entry => ({
    params: { id: entry.id },
    props: { entry },
  }));
}

const { entry } = Astro.props;
const { Content } = await render(entry);
const previewImg = entry.data.img || '/default-cover.jpg';
const { title, description } = entry.data;
---
<IframeLayout title={title} description={description} img={previewImg}>
  <div class="w-full">
      <article>
        <Prose>
          <Content />
        </Prose>
      </article>
  </div>
</IframeLayout>
