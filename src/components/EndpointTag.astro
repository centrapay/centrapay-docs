---
const {tag, variant = 'medium'} = Astro.props;

const variantStyles = {
  medium: 'rounded-lg px-1.5 ring-1 ring-inset',
};

const colorStyles = {
  get: {
    small: 'text-emerald-500',
    medium:
      'ring-emerald-300 bg-emerald-400/10 text-emerald-500',
  },
  post: {
    small: 'text-sky-500',
    medium:
      'ring-sky-300 bg-sky-400/10 text-sky-500',
  },
  put: {
    small: 'text-amber-500',
    medium:
      'ring-amber-300 bg-amber-400/10 text-amber-500',
  },
  delete: {
    small: 'text-red-500',
    medium:
      'ring-rose-200 bg-rose-50 text-red-500',
  },
  zinc: {
    small: 'text-zinc-400',
    medium:
      'ring-zinc-200 bg-zinc-50 text-zinc-500',
  },
};

const variantStyle = variantStyles[variant];
const colorStyle = colorStyles[tag.toLowerCase()][variant];
---
<span
  class:list={[
    "font-mono text-[0.625rem] font-semibold leading-6",
    `${variantStyle}`,
    `${colorStyle}`,
  ]}
>
  {tag}
</span>
