---
import { Code as ExpressiveCode } from "astro-expressive-code/components";
const content = (await Astro.slots.render("default")).trim()
  .replaceAll('&#39;', '\'')
  .replaceAll('&quot;', '"')
  .replaceAll('&lt;', '<')
  .replaceAll('&gt;', '>');
---

<ExpressiveCode
	code={content}
	title={Astro.props.title ?? undefined}
	class="mb-8"
	mark={Astro.props.mark ?? undefined}
	frame="terminal"
	lang={Astro.props["data-language"]}
/>
