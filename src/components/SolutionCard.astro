---
const {
  description,
  imageSrc,
  linkText,
  linkUrl,
  title,
} = Astro.props;
---
<div class="flex flex-col overflow-hidden rounded-lg shadow-xl">
  <div class="shrink-0">
    <img
      class="h-48 w-full object-cover"
      src={imageSrc}
      alt=""
    >
  </div>
  <div class="prose flex flex-1 flex-col justify-between gap-6 bg-white p-6">
    <div class="flex-1">
      <h4 class="font-semibold">
        { title }
      </h4>
      <p>
        { description }
      </p>
    </div>
    <a
      href={linkUrl}
      class="flex items-center justify-center rounded-md bg-interactive-primary px-4 py-2 text-content-inverse-primary shadow-md ring-focus-ring hover:bg-interactive-secondary focus:outline-none focus:ring-2"
    >
      { linkText }
    </a>
  </div>
</div>
